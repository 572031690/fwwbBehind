<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhy.Mapper.AuditMapper">
    <select id="findAll" resultType="com.xhy.domain.audit" parameterType="String">
        select * from tb_audit where upname = #{upname}
    </select>

    <insert id="addAudit" parameterType="com.xhy.domain.audit">
        insert into tb_audit values (#{time},#{auther},#{upname},#{text});
    </insert>

    <update id="updateAudit" parameterType="com.xhy.domain.audit">
        update tb_audit set time=#{time},auther=#{auther},upname=#{upname},text=#{text} where id = #{id}
    </update>

    <delete id="deleteAudit" parameterType="int">
        delete  from tb_audit where id=#{id}
    </delete>
</mapper>